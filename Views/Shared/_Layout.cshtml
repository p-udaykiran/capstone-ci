<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NotesApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        /* Global Styles */
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f4f9;
            color: #333;
            margin: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Dark Mode */
        .dark-mode {
            background-color: #232323;
            color: #e4e4e4;
        }

        /* Navbar */
        .navbar {
            background-color: #1e2a47; /* Deep Navy */
            padding: 1rem 2rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        }

        .navbar-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: #ffb400; /* Soft Gold */
            margin: 0;
        }

        .form-check-input:checked {
            background-color: #ffb400;
            border-color: #ffb400;
        }

        /* Sidebar */
        .sidebar {
            background-color: #1e2a47; /* Deep Navy */
            color: #f4f4f9;
            padding: 1.5rem;
            width: 250px;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.3);
            min-height: 100vh;
            position: fixed;
            transition: all 0.3s ease;
        }

        .sidebar h6 {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: #ffb400;
        }

        .sidebar .btn {
            width: 100%;
            background-color: #3a497d; /* Medium Navy */
            border: 1px solid transparent;
            color: #f4f4f9;
            padding: 0.75rem;
            text-align: left;
            font-weight: 600;
            margin-bottom: 1rem;
            transition: all 0.3s ease-in-out;
        }

        .sidebar .btn:hover {
            background-color: #ffb400;
            color: #232323;
            transform: scale(1.05);
        }

        .sidebar .btn i {
            margin-right: 0.5rem;
        }

        /* Main Content */
        .main-content {
            padding: 2rem;
            flex-grow: 1;
            margin-left: 250px; /* Sidebar width */
            transition: background-color 0.3s ease-in-out;
        }

        .dark-mode .main-content {
            background-color: #333;
        }

        /* Note Cards */
        .note-card {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin-bottom: 2rem;
        }

        .dark-mode .note-card {
            background-color: #444c5c;
            color: #e4e4e4;
        }

        .note-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }

        .note-title {
            font-size: 1.4rem;
            font-weight: 700;
            color: #1e2a47; /* Deep Navy */
        }

        .note-meta {
            font-size: 0.9rem;
            color: #888;
            margin-top: 0.5rem;
        }

        .note-body {
            font-size: 1rem;
            color: #555;
            margin-top: 0.5rem;
        }

        .note-buttons a {
            padding: 8px 16px;
            border-radius: 6px;
            text-transform: uppercase;
            font-weight: 600;
            font-size: 0.85rem;
            transition: all 0.3s ease;
            text-decoration: none;
            margin-right: 0.5rem;
        }

        /* Buttons */
        .btn-view {
            color: #1e2a47; /* Deep Navy */
            border: 2px solid #1e2a47;
        }

        .btn-edit {
            color: #ffb400; /* Soft Gold */
            border: 2px solid #ffb400;
        }

        .btn-delete {
            color: #e74c3c; /* Red */
            border: 2px solid #e74c3c;
        }

        .btn-view:hover {
            background-color: #1e2a47;
            color: #fff;
            box-shadow: 0 0 8px rgba(30, 42, 71, 0.5);
        }

        .btn-edit:hover {
            background-color: #ffb400;
            color: #232323;
            box-shadow: 0 0 8px rgba(255, 180, 0, 0.5);
        }

        .btn-delete:hover {
            background-color: #e74c3c;
            color: #fff;
            box-shadow: 0 0 8px rgba(231, 76, 60, 0.5);
        }

        /* Footer */
        .footer {
            text-align: center;
            padding: 1rem;
            background-color: #1e2a47; /* Deep Navy */
            color: #f4f4f9;
            font-size: 0.85rem;
            margin-top: 2rem;
        }

        /* Toggle Switch */
        .form-switch {
            position: absolute;
            top: 18px;
            right: 24px;
        }

        /* Mobile Responsiveness */
        @media (max-width: 768px) {
            .sidebar {
                position: static;
                width: 100%;
                box-shadow: none;
                padding: 1rem;
                margin-bottom: 2rem;
            }

            .sidebar h6 {
                font-size: 1.1rem;
            }

            .sidebar .btn {
                width: 100%;
                font-size: 0.9rem;
                padding: 0.6rem;
            }

            .main-content {
                margin-left: 0;
                padding: 1.5rem;
            }

            .navbar-title {
                font-size: 1.5rem;
                text-align: center;
                margin: 0;
            }

            .form-check-input {
                margin-left: auto;
                margin-right: auto;
            }

            .note-card {
                margin-bottom: 1rem;
            }

            .footer {
                font-size: 0.75rem;
            }
        }

    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <header class="navbar d-flex justify-content-center align-items-center position-relative">
        <div class="navbar-title">
            ðŸ“’ NotesApp ðŸ“’
        </div>
        <div class="form-check form-switch position-absolute top-50 end-0 translate-middle-y me-4">
            <input class="form-check-input" type="checkbox" id="darkModeToggle" />
        </div>
    </header>

    <div class="d-flex flex-grow-1">
        <!-- Sidebar -->
        <nav class="sidebar">
            <h6>Navigation</h6>
            <a class="btn text-start text-white" asp-controller="Notes" asp-action="Index">
                ðŸ“‹ All Notes <span class="badge bg-light text-dark">@ViewBag.NoteCount</span>
            </a>
            <a class="btn btn-primary text-white text-start" asp-controller="Notes" asp-action="Create">âž• New Note</a>

            <h6 class="mt-4">Connect</h6>
            <a class="btn btn-outline-light" href="https://www.linkedin.com/in/udaykiran-pagidimari-30275725a/" target="_blank"><i class="fab fa-linkedin"></i> LinkedIn</a>
            <a class="btn btn-outline-light" href="https://github.com/p-udaykiran" target="_blank"><i class="fa-brands fa-github"></i> GitHub</a>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
        Â© 2025 â€“ NotesApp by UdayKiran Pagidimari
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const toggle = document.getElementById('darkModeToggle');

        // Check localStorage for theme preference
        if (localStorage.getItem('theme') === 'dark') {
            document.body.classList.add('dark-mode');
            toggle.checked = true;
        }

        toggle.addEventListener('change', function () {
            document.body.classList.toggle('dark-mode');
            
            // Save preference in localStorage
            if (document.body.classList.contains('dark-mode')) {
                localStorage.setItem('theme', 'dark');
            } else {
                localStorage.setItem('theme', 'light');
            }
        });
    </script>
</body>
</html>
